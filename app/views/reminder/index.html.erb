 <div id="content-bucket">
    <div id="content-body" class="pb20">
      <h1 class="tac">Hello <span><%=session[:user_name]%></span></h1>
	  <%if flash[:notice] || flash[:error]%>
		  <%if flash[:notice] %>
			  <div>
				<p style="color: #008000; font-family:Arial, Helvetica, sans-serif; font-size:14px; text-align:center;"><%= flash[:notice] %></p>
			  </div>
		  <% else %>  
			  <div>
				<p style="color: #FD6818; font-family:Arial, Helvetica, sans-serif; font-size:14px; text-align:center;"><%= flash[:error] %></p>
			  </div>
		  <%end%>
	  <%end%>  
      <h2>Listing of eReminders</h2>
        <table width="100%" border="0" cellspacing="0" cellpadding="0" id="reminderlist">
          <tr>
            <th align="left" valign="top">Title</th>
            <th align="left" valign="top">Scheduled Date</th>
            <th align="left" valign="top">Description</th>
            <th width="5%" align="left" valign="top">&nbsp;</th>
            <th width="5%" align="left" valign="top">&nbsp;</th>
            <th width="8%" align="left" valign="top">&nbsp;</th>
          </tr>
		  
		  <% @reminder.each do |r| %>
	  		<tr>
		  		<td align="left" valign="top"><%=h r.name %></td>
			    <td align="left" valign="top"><%=h r.scheduled %></td>
				<td align="left" valign="top"><%=h r.description %></td>
			    <td width="5%" align="left" valign="top"><%= link_to 'Show', r %></td>
			    <td width="5%" align="left" valign="top"><%= link_to 'Edit', edit_reminder_path(r) %></td>
			    <td width="8%" align="left" valign="top"><%= link_to 'Destroy', r, :confirm => 'Are you sure ?', :method => :delete %></td>
		  	</tr>
		  <% end %>		  
        </table>
		<div id="last">
				<label class="h50">&nbsp;</label>
				<span class="bodytext"><%= link_to 'New Reminder', new_reminder_path , :style => "font-weight:bold" %></span>&nbsp;&nbsp;|&nbsp;&nbsp;<span class="bodytext"><%= link_to "Back", {:controller => "user", :action => "private"}, :style => "font-weight:bold" %></span>
	    </div>
        <p class="bodytext">&nbsp;</p>
      </div>
    </div>
