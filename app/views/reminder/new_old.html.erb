	Calendar Date Select Date Picker Plugin
-->
 <%= javascript_include_tag :defaults %> 
 <%= calendar_date_select_includes %> 

<%= javascript_include_tag "calendar_date_select" %>
<%= stylesheet_link_tag "calendar_date_select" %>
<%= javascript_include_tag "prototype" %>
<%#= stylesheet_link_tag "basic.css" %>
<%= calendar_date_select_includes params[:style]%>

Hello <strong><%=session[:user_name]%></strong>.
<h1>New Reminder</h1>

<% form_for :reminder, @reminder, :url => {:controller => 'reminder', :action => 'create'} do |r| %>
  <%= r.error_messages %>

  <p>
    <%= r.label :title %><br />
    <%= r.text_field :name %>
  </p>	
  <p>
  	<%=r.label :scheduled %><br/>
  	<%#= calendar_date_select_tag "e_date_and_time", nil, :embedded => true, :time => true %>
	<!--<label>Date: <%#= r.unobtrusive_datetime_picker :date %></label>-->	
	<%#= datetime_select('range', 'start_date', :order => [:month, :day, :year])%>
	<%#= select_date Date.today, :prefix => :start_date %>
	<%#=select_datetime(DateTime.now, :prompt => "Choose date and time")%>
	<%#=select_datetime(DateTime.now, :prompt => true)%>
	
	<%= datetime_select :reminder, :scheduled, :prompt => true %>
	<%#= calendar_date_select_tag "scheduled", nil, :time => true, :size => "25px" %>
	<%#= r.calendar_date_select_tag "scheduled",Date.today %>
  </p></br>	
  <p>
    <%= r.label :description %><br/>		
    <%= r.text_area :description, :size => "40x6"%>
  </p>
  <p>
    <%= r.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'My Reminder', :controller => "reminder" %>