<div align="center">
	<h1>Sign Up</h1>
</div>
<div>&nbsp;</div>

<div align="center" class="custPre">
	Please fill up following details to Sign Up. All fields are mandatory.	
</div>
<div>&nbsp;</div>	
<table border="0" cellpadding="0" cellspacing="0" width="250" align="center">	
	<% form_for :user, :url => {:controller => 'user', :action => 'create'} do |f| -%>
	<%= f.error_messages %>
	<tr>	
		<td width="40%">
		    <%= f.label :user_name, 'User Name :' %>
		</td>
		<td width="60%">		
		    <%= f.text_field :user_name %>
		</td>
	</tr>
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>		
	<tr>	
		<td width="40%">
			<%= f.label :user_Id, 'User ID :' %>
		</td>
		<td width="60%">
			<%= f.text_field :user_id %>
		</td>
	</tr>
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>	
	<tr>
	   	<td width="40%">
	   		<%= f.label :password, 'Password :' %>
		</td>
		<td width="60%">
			<%= f.password_field :password %>
		</td>	
	</tr>
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>	
	<tr>
		<td width="40%">
			<%= f.label :email, 'Email :' %>
		</td>
	  	<td width="60%">
	  		<%= f.text_field :email %>
		</td>
	</tr> 
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>	
	<tr>
		<td colspan="2" align="center">
	    	<%= f.submit 'SignUp' %>
		</td>	
	</tr>
	<% end %>
	<tr>
		<td colspan="2">&nbsp;</td>
	</tr>	
	<tr>
		<td colspan="2" align="center">
			<%= link_to "Home", :controller => "home" %> | <%= link_to "Sign In", :controller => "home" %>
		</td>	
	</tr>	
</table>	